<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">
			com.microsoft.sqlserver.jdbc.SQLServerDriver
		</property>
		<property name="connection.url">jdbc:sqlserver://localhost:1433;databaseName=gdufs</property>
		<property name="connection.username">sa</property>
		<property name="connection.password">frotech.com</property>
		<property name="dialect">
			org.hibernate.dialect.SQLServerDialect
		</property>

		<property name="show_sql">true</property>
		<property name="format_sql">true</property>


		<mapping resource="com/fro/entity/Announce.hbm.xml" />
		<mapping resource="com/fro/entity/UserInfo.hbm.xml" />
		<mapping resource="com/fro/entity/UserRight.hbm.xml" />
		<mapping resource="com/fro/entity/ClasshourInfo.hbm.xml" />
		<mapping resource="com/fro/entity/ClassInfo.hbm.xml" />
		<mapping resource="com/fro/entity/ClassSchedule.hbm.xml" />
		<mapping resource="com/fro/entity/DepartmentInfo.hbm.xml" />
		<mapping resource="com/fro/entity/DeviceInfo.hbm.xml" />
		<mapping resource="com/fro/entity/GroupInfo.hbm.xml" />
		<mapping resource="com/fro/entity/LabInfo.hbm.xml" />
		<mapping resource="com/fro/entity/MajorInfo.hbm.xml" />
		<mapping resource="com/fro/entity/RightInfo.hbm.xml" />
		<mapping resource="com/fro/entity/SessionParameter.hbm.xml" />
		<mapping resource="com/fro/entity/UserGroup.hbm.xml" />
		<mapping resource="com/fro/entity/SessionLog.hbm.xml" />
		<mapping resource="com/fro/entity/LabRight.hbm.xml" />


	</session-factory>

</hibernate-configuration>